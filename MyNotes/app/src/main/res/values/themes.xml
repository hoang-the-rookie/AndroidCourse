<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyNotes" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_green</item>
        <item name="colorPrimaryVariant">@color/darker_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:windowBackground">@color/back_light_green</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_light</item>
        <item name="colorSecondaryVariant">@color/purple_darker</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
    </style>

    <style name="yellowTheme" parent="@android:style/Theme.Holo.Light">
        <item name="colorPrimary">@color/light_yellow</item>
        <item name="colorPrimaryVariant">@color/darker_yellow</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:windowBackground">@color/back_light_yellow</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
    </style>
</resources>